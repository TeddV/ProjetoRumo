@model ProjetoRumo.Models.Pedido

@{
    ViewData["Title"] = "Novo pedido";
}

<h1>Criar Pedido</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MesaSolicitante" class="control-label"></label>
                <input asp-for="MesaSolicitante" class="form-control" />
                <span asp-validation-for="MesaSolicitante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <input asp-for="Cliente" class="form-control" />
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar novo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button type="button" class="btn btn-secondary">

        <a asp-action="Index">Voltar a Lista</a>
    </button></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
